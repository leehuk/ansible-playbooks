DEVICE={{ item.device }}
TYPE=Bridge
ONBOOT=yes
BOOTPROTO=none
NM_CONTROLLED=no
DELAY=0
{% if item.ip is defined or item.ipmulti is defined %}
BOOTPROTO=none
{% if item.ip is defined %}
IPADDR={{ item.ip }}
PREFIX={{ item.subnet }}
{% endif %}
{% if item.ipmulti is defined %}
{% set count = 0 %}
{% for itemip in item.ipmulti %}
IPADDR{{ count }}={{ itemip.ip }}
PREFIX{{ count }}={{ itemip.subnet }}
{% set count = count + 1 %}
{% endfor %}
{% endif %}
{% if item.gateway is defined %}
GATEWAY={{ item.gateway }}
DEFROUTE=yes
{% endif %}
{% endif %}
{% if item.dhcp is defined %}
BOOTPROTO=dhcp
{% endif %}
{% if item.ip6 is defined %}
IPV6INIT=yes
IPV6_AUTOCONF=no
IPV6_DEFROUTE=yes
IPV6_FAILURE_FATAL=no
IPV6_ADDR_GEN_MODE=stable-privacy
IPV6ADDR={{ item.ip6 }}/{{ item.subnet6 }}
{% if item.gateway6 is defined %}
IPV6_DEFAULTGW={{ item.gateway6 }}
{% endif %}
IPV6_PRIVACY=no
{% else %}
IPV6INIT=no
{% endif %}

